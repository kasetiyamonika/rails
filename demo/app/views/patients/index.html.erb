<p id="notice"><%= notice %></p>

<h1>Patients</h1>
<button class="btn btn-success float-xl-right"><%= link_to 'New Patient', new_patient_path %></button>

  <table class="text-center text-dark table table-hover">
    <thead>
      <tr>
        <td colspan="5">
          <%= form_tag patients_path, method: :get do %>
          <div class="row">
            <div class="col">
              <%= text_field_tag :name ,params[:name] ,placeholder: "Search name" , class: "form-control" %>
            </div>
            <div class="col">
              <%= text_field_tag :mobile ,params[:mobile] ,placeholder: "Search mobile" , class: "form-control"%>
            </div>
            <div class="col">
          <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
            </div>
          </div>
          <% end %>
        </td>
      <tr>
        <th>Name</th>
        <th>Mobile</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="text-lg-center">
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.mobile %></td>
          <td><%= link_to 'Show', patient %></td>
          <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="5">
          <%= paginate @patients %>

        </td>
      </tr>
    </tbody>
  </table>
