<p id="notice"><%= notice %></p>

<h1>Emails Users</h1>

<table class="text-center text-dark table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-lg-center">
    <% @emails_users.each do |emails_user| %>
      <tr>
        <td><%= emails_user.user.name %></td>
        <td><%= emails_user.email.email %></td>
        <td><%= link_to 'Show', emails_user %></td>
        <td><%= link_to 'Edit', edit_emails_user_path(emails_user) %></td>
        <td><%= link_to 'Destroy', emails_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="brn btn-success btn-block"><%= link_to 'New Emails User', new_emails_user_path %></button>
