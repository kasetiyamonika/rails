<p id="notice"><%= notice %></p>

<h1>Contacts Users</h1>

<table class="text-center text-dark table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-lg-center">
    <% @contacts_users.each do |contacts_user| %>
      <tr>
        <td><%= contacts_user.user.name %></td>
        <td><%= contacts_user.contact.mobile %></td>
        <td><%= link_to 'Show', contacts_user %></td>
        <td><%= link_to 'Edit', edit_contacts_user_path(contacts_user) %></td>
        <td><%= link_to 'Destroy', contacts_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="brn btn-success btn-block"><%= link_to 'New Contacts User', new_contacts_user_path %></button>
