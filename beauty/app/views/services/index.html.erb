
  <div class="ftco-blocks-cover-1">
    <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('assets/hom_1.jpg')">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-7">
              <h1 class="mb-3">Our Services</h1>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Soluta veritatis in tenetur doloremque, maiores doloribus officia iste. Dolores.</p>
              <p><a href="#" class="btn btn-primary">Learn More</a></p>
              <%= form_tag services_path,method: :get do %>
                <div>
                  <%= text_field_tag :name ,params[:name], placeholder: "Search Services" ,class: "form-control" %><br>
                  <%= submit_tag "Search", class: "btn btn-primary " %>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <table class="text-center text-dark table table-hover">
    <div class="site-section bg-light">
      <div class="container">
        <div class="row">
          <% @services.each do |service| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="post-entry-1 h-100">
              <a href="<%= service_path(service) %>">
                <img src="/assets/haircut2.jpg" alt="Image" class="img-fluid">
              </a>
              <div class="post-entry-1-contents">
                <h2><a href="<%= service_path(service) %>"><%= service.name %></a></h2>
                <!-- <span class="meta d-inline-block mb-3">July 17, 2019 <span class="mx-2">by</span> <a href="#">Admin</a></span> -->
                <p><%= service.description %></p>
                <div>
                  <button class="btn btn-outline-primary custom-prev"><%= link_to 'Appointment', new_appointment_path %></button>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <%= paginate @services %>
      </div>
      </div>
  </table>
</div>
