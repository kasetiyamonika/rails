<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('/assets/hom_1.jpg')">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
            <h1 class="mb-3">Show Order</h1>
            <p><a href="#" class="btn btn-primary">Learn More</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="ftco-section bg-light">
	<div class="container">
    <div class="heading-section mb-5">
    <h2 class="mb-4">Show All Order</h2>
    </div>
    <div class="ftco-search">
      <div class="container">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>User:</strong>
            <%= @order.user_id %>
          </p>

          <p>
            <strong>Payment:</strong>
            <%= @order.payment_id %>
          </p>

          <p>
            <strong>Payment mode:</strong>
            <%= @order.payment_mode %>
          </p>

          <p>
            <strong>Date time:</strong>
            <%= @order.date_time %>
          </p>

          <p>
            <strong>Total:</strong>
            <%= @order.total %>
          </p>

          <p>
            <strong>Status:</strong>
            <%= @order.status %>
          </p>
        </div>
    </div>
    <%= link_to 'Edit', edit_order_path(@order) %> |
    <%= link_to 'Back', orders_path %>
  </div>
</section>
